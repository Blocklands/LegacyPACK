
<!-- ================================================================ 

Custom Ore Generation:   Forestry Module

Generates: 
Apatite, Nickel, Tin

================================================================ -->

    <!-- Mod detection -->
    <IfModInstalled name="ImmersiveEngineering">
    
        <!-- Starting Configuration for Custom Ore Generation. -->
        <ConfigSection>
        
            
            <!-- Setup Screen Configuration -->
            <ConfigSection>
                <OptionDisplayGroup name='groupIM' displayName='Forestry' displayState='shown'> 
                    <Description>
                        Distribution options for Forestry Ores.
                    </Description>
                </OptionDisplayGroup>

                <!-- Nickel Configuration UI Starting -->
                <ConfigSection>
                    <OptionChoice name='imNickelDist'  displayState='shown' displayGroup='groupIM'> 
                        <Description> Controls how Nickel is generated </Description> 
                        <DisplayName>Immersive Engineering Nickel</DisplayName>
                        <Choice value='layeredVeins' displayValue='Layered Veins'>
                            <Description>
                                Layered Veins.
                            </Description>
                        </Choice>
                        <Choice value='strategicCloud' displayValue='Clouds'>
                            <Description>
                                Strategic Clouds.
                            </Description>
                        </Choice>
                        <Choice value='vanillaStdGen' displayValue='Vanilla'>
                            <Description>
                                Vanilla-style clusters.
                            </Description>
                        </Choice>
                        <Choice value='none' displayValue='None' description='Nickel is not generated in the world.'/>
                    </OptionChoice>
                    <OptionNumeric name='imNickelFreq' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupIM'>
                        <Description> Frequency multiplier for Immersive Engineering Nickel distributions </Description>
                        <DisplayName>Immersive Engineering Nickel Freq.</DisplayName>
                    </OptionNumeric>
                    <OptionNumeric name='imNickelSize' default='1'  min='0' max='5' displayState=':= if(?advOptions,"shown","hidden")' displayGroup='groupIM'>
                        <Description> Size multiplier for Immersive Engineering Nickel distributions </Description>
                        <DisplayName>Immersive Engineering Nickel Size</DisplayName>
                    </OptionNumeric>
                </ConfigSection> 
                <!-- Nickel Configuration UI Complete -->
 
            </ConfigSection>
            <!-- Setup Screen Complete -->


            <!-- Setup Overworld -->
            <IfCondition condition=':= ?COGActive'>
                
                <!-- Starting Original Overworld Ore Removal -->
                <Substitute name='frstOverworldOreSubstitute0' block='minecraft:stone'>
                    <Description>
                        Replace vanilla-generated ore clusters.
                    </Description>
                    <Comment>
                        The global option deferredPopulationRange must be large enough to catch all ore clusters (>= 32).
                    </Comment>
					<Replaces block='ImmersiveEngineering:ore:0' />
					<Replaces block='ImmersiveEngineering:ore:1' />
					<Replaces block='ImmersiveEngineering:ore:2' />
					<Replaces block='ImmersiveEngineering:ore:3' />
                    <Replaces block='ImmersiveEngineering:ore:4' />
                </Substitute>
                <!-- Original Overworld Ore Removal Complete -->
                
                <!-- Adding ores --> 
                
                <!-- Begin Nickel Generation --> 
                
                <!-- Begin LayeredVeins distribution of Nickel -->
                <IfCondition condition=':= imNickelDist = "layeredVeins"'>
                
                    <Veins name='imNickelBaseVeins' block='ImmersiveEngineering:ore:4' inherits='PresetLayeredVeins'>
                        <Description>
                            Small, fairly rare motherlodes with 2-4 horizontal veins each.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60E3B78E</WireframeColor>
                        <Setting name='MotherlodeSize' avg=':= 1 * 1 * imNickelSize * _default_' range=':= 1 * 1 * imNickelSize * _default_'/>
                        <Setting name='MotherlodeHeight' avg=':= 40' range=':= 12' type='normal' scaleTo='Biome'/> 
                        <Setting name='SegmentRadius' avg=':= 1 * 1 * imNickelSize * _default_' range=':= 1 * 1 * imNickelSize * _default_'/>
                        <Setting name='OreDensity' avg=':= 1 * 1 * _default_' range=':= _default_'/>
                        <Setting name='MotherlodeFrequency' avg=':= 1 * 0.75 * imNickelFreq * _default_'/>
                        <Setting name='BranchFrequency' avg=':= 0.7 * _default_'/>
                        <Setting name='BranchHeightLimit' avg=':= 10'/>
                        <Replaces block='minecraft:stone'/>
                    </Veins>
                    
                    <!-- Begin Preferred Biome Distribution (Nickel Layered Veins) Settings -->
                    <Veins name='imNickelPrefersVeins' block='ImmersiveEngineering:ore:4' inherits='imNickelBaseVeins'>
                        <Description>
                            Spawns 2 more times in preferred biomes.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60E3B78E</WireframeColor>
                        <Setting name='MotherlodeFrequency' avg=':= 2 * _default_'/>
                        <BiomeType name='Jungle'/>
                        <BiomeType name='Mountain'/>
                    </Veins>
                    <!-- End Preferred Biome Distribution (Nickel Layered Veins) Settings -->
                
                </IfCondition>
                <!-- End LayeredVeins distribution of Nickel -->
                
                
                <!-- Begin  StrategicCloud distribution of Nickel -->
                <IfCondition condition=':= imNickelDist = "strategicCloud"'>
                
                    <Cloud name='imNickelBaseCloud' block='ImmersiveEngineering:ore:4' inherits='PresetStrategicCloud'>
                        <Description>
                            Large irregular clouds filled lightly with ore.  These are huge, spanning several 
                            adjacent chunks, and consequently rather rare.  They contain a sizeable amount of 
                            ore, but it takes some time and effort to mine due to low density.
                            The intent for strategic clouds is that the player will need to actively search for
                            one and then set up a semi-permanent mining base and spend some time actually mining
                            the ore.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60E3B78E</WireframeColor>
                        <Setting name='CloudRadius' avg=':= 1 * 0.85 * imNickelSize * _default_' range=':= 1 * 0.85 * imNickelSize * _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 0.85 * imNickelSize * _default_' range=':= 1 * 0.85 * imNickelSize * _default_'/>
                        <Setting name='CloudHeight' avg=':= _default_' range=':= _default_' type='normal' scaleTo='Biome'/>
                        <Setting name='OreDensity' avg=':= 1 * 1 * _default_' range=':= _default_'/>
                        <Setting name='CloudThickness' avg=':= 1 * 0.9 * 0.85 * imNickelSize * _default_' range=':= 1 * 0.9 * 0.85 * imNickelSize  * _default_'/>
                        <Setting name='DistributionFrequency' avg=':= 1 * 2.5 * imNickelFreq *_default_'/>
                        <Replaces block='minecraft:stone'/>
                        
                        <!-- Begin Nickel Strategic Cloud Hint Veins -->
                        <Veins name='imNickelBaseHintVeins' block='ImmersiveEngineering:ore:4' inherits='PresetHintVeins'>
                            <Description>
                                Single blocks, generously scattered through all heights (density is about that of vanilla iron ore). 
                                They will replace dirt and sandstone (but not grass or sand), so they can be found nearer  
                                to the surface than most ores.  Intened to be used as a child distribution for large, rare strategic  
                                deposits that would otherwise be very difficult to find. 
                            </Description>
                            <DrawWireframe>:=drawWireframes</DrawWireframe>
                            <WireframeColor>0x60E3B78E</WireframeColor>
                            <Replaces block='minecraft:dirt'/>
                            <Replaces block='minecraft:sandstone'/>
                            <Replaces block='minecraft:stone'/>
                        </Veins>
                        <!-- End Nickel Strategic Cloud Hint Veins -->

                    </Cloud>
                    
                
                </IfCondition>
                <!-- End  StrategicCloud distribution of Nickel -->
                
                
                <!-- Begin  Vanilla distribution of Nickel -->
                <IfCondition condition=':= imNickelDist = "vanillaStdGen"'>
                
                    <StandardGen name='imNickelBaseStandard' block='ImmersiveEngineering:ore:4' inherits='PresetStandardGen'>
                        <Description>
                            This mimics vanilla ore generation.
                        </Description>
                        <DrawWireframe>:=drawWireframes</DrawWireframe>
                        <WireframeColor>0x60E3B78E</WireframeColor>
                        <Setting name='Size' avg=':= 1 * 0.75 * imNickelSize * _default_'/>
                        <Setting name='Height' avg=':= 38' range=':= 38' type='uniform'/> 
                        <Setting name='Frequency' avg=':= 1 * 1 * imNickelFreq * _default_'/>
                        <Replaces block='minecraft:stone'/>
                    </StandardGen>
                    
                
                </IfCondition>
                <!-- End  Vanilla distribution of Nickel -->
               
                <!-- End Nickel Generation --> 

                <!-- Done adding ores -->
            
            </IfCondition>
            <!-- Overworld Setup Complete -->

        
        </ConfigSection>
        <!-- Configuration for Custom Ore Generation Complete! -->
    
    </IfModInstalled> 
 


